# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# MongoDB Configuration (if needed alongside Supabase)
MONGODB_URI=mongodb://localhost:27017/unified_platform
MONGODB_DB_NAME=unified_platform

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com

# Matching Service Configuration
MATCHING_ALGORITHM_TYPE=cosine_similarity
MATCHING_MIN_SCORE=0.7
MATCHING_MAX_RESULTS=50

# Process Connections Configuration
PROCESS_INTERVAL_MS=5000
MAX_CONCURRENT_PROCESSES=10

# Dashboard & Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Registration Service
REGISTRATION_VERIFICATION_REQUIRED=false
REGISTRATION_AUTO_APPROVE=true

# Messaging Service
MESSAGE_MAX_LENGTH=5000
MESSAGE_ATTACHMENT_MAX_SIZE_MB=10

# Notifications Service
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_PUSH_ENABLED=false

# Admin Service
ADMIN_EMAIL=admin@example.com

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE_MB=50
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (for caching, if needed)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External API Keys (add as needed)
GOOGLE_MAPS_API_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
